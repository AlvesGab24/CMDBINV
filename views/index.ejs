<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>CMDB Simples Node.js</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <h1>CMDB - Cadastro de Ativos</h1>
  <form action="/add" method="POST">
    <input type="text" name="name" placeholder="Nome do ativo" required />
    <input type="date" name="purchase_date" required />
    <input type="text" name="model" placeholder="Modelo/Versão" required />
    <input type="text" name="owner" placeholder="Usuário proprietário" required />
    <button type="submit">Adicionar Ativo</button>
  </form>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Data de Compra</th>
        <th>Modelo</th>
        <th>Proprietário</th>
      </tr>
    </thead>
    <tbody>
      <% assets.forEach(asset => { %>
      <tr>
        <td><%= asset.name %></td>
        <td><%= asset.purchase_date %></td>
        <td><%= asset.model %></td>
        <td><%= asset.owner %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

